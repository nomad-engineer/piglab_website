---
import { getCollection } from "astro:content";

const articles = await getCollection("articles");
const visibleArticles = await Promise.all(
  articles
    .filter((a) => a.data.home_display !== "hidden")
    .map(async (a) => {
      const { Content } = await a.render();
      return { ...a, Content };
    })
);
---

{visibleArticles.map((article) => (
  <section id="approach" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
    <div class="max-w-5xl mx-auto space-y-8">
      <h3 class="text-4xl md:text-5xl font-medium mb-8">{article.data.title}</h3>
      <div class="text-[var(--white-icon)] text-lg space-y-4">
        <article.Content />
      </div>
    </div>
  </section>
))}
